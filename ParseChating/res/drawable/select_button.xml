<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_window_focused="true"><shape>
            <solid android:color="#E8EAF6" />

            <stroke android:width="1dp" android:color="@android:color/black" />

            <gradient android:centerColor="#311B92" android:endColor="#EDE7F6" android:startColor="#7E57C2" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

            <corners android:radius="3dp" />
        </shape></item>
    <item android:state_pressed="false" android:state_window_focused="true"><shape android:shape="rectangle">
            <solid android:color="#E8EAF6" />

            <gradient android:centerColor="#311B92" android:endColor="#EDE7F6" android:startColor="#7E57C2" />

            <stroke android:width="1dp" android:color="@android:color/black" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />

            <corners android:radius="3dp" />
        </shape></item>

</selector>